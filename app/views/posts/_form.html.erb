<%= form_for @post, remote: true do |f| %>
  <div class="field">
    <%= f.label :Content %><br />
    <%= f.text_field :content, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :post %><br />
    <%= f.text_field :post_created %>
  </div>

  <div class="field">
    <%= f.label :notice_date %><br />
    <%= f.date_field :date_publish %>
  </div>

  <div class="actions">
    <%= f.submit "Post", id: 'styled-button' %>
  </div>

<% end %>