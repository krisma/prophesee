<h2 style="color: white;">Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <div class="field">
    <%= f.label :email, style: "color: white;" %><br />
    <%= f.email_field :email, autofocus: true, id: 'input' %>
  </div>

  <div class="field">
    <%= f.label :password, style: "color: white;" %><br />
    <%= f.password_field :password, autocomplete: "off", id: 'input' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, style: "color: white;" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Sign in", id: 'styled-button-inverse' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
<hr>
<p style="color: white;">Not yet registered?<p>
<%= form_tag("/switch_sign_up", method: "get", remote: true) do %>
  <%= submit_tag "Sign up", :id => 'styled-button-inverse' %>
<% end %>