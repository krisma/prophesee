<h2 style="color: white;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, style: "color: white;" %><br />
    <%= f.email_field :email, autofocus: true, id: 'input' %>
  </div>

  <div class="field">
    <%= f.label :password, style: "color: white;" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", id: 'input' %>
  </div>

<!--   <div class="field">
    <%= f.label :password_confirmation, style: "color: white;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", id: 'input' %>
  </div>
 -->
  <div class="actions">
    <%= f.submit "Sign up", id: 'styled-button-inverse' %>
  </div>
<% end %>

<%= render "devise/shared/links" %><hr>
<p style="color: white;">Already registered?<p>

<%= form_tag("/switch_sign_in", method: "get", remote: true) do %>
  <%= submit_tag "Sign in", :id => 'styled-button-inverse' %>
<% end %>
