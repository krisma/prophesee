<% tab "setting" %>
<div class="row">
	<div class="col-lg-4 col-lg-offset-4 text-center">
<%= image_tag current_user.avatar.url(:thumb), class: "circle" %>
<p><%= current_user.email %></p>
<%= form_tag('/avatar', remote: true,  multipart: true, method: :post) do %>

  <div class="field">

    <%= file_field_tag :avatar %>
  </div>
  <div class="actions">
    <%= submit_tag 'Upload' %>
  </div>
<% end %>
</div>
</div>