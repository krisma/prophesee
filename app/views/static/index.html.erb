
<div id="loginbox">
	<% if user_signed_in? %>
	<%= render 'signed_in' %>
	<% else %>
	<%= render 'devise/sessions/new' %>
	<% end %>
</div>
<% if user_signed_in? %>
<div class="panel panel-default" id="watchbox">
	
	<div class="panel-heading">Watchlist</div>
	<div class="panel-body">

	<% current_user.watchings.each do |w| %>
	      	<% @s = w.stock %>
		<div class="stock-cell">
		<h6><%= @s.symbol %>
			<%= @s.close %>
			<%= @s.change %>
			<%= @s.percent_change %>

		<!-- Button trigger modal -->
<button type="button" class="btn btn-md" data-toggle="modal" data-target="#myModal<%= @s.symbol %>">
<span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
</button>

<!-- Modal -->
<div class="modal fade" id="myModal<%= @s.symbol %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content" id="stock-modal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Statistics</h4>
      </div>
      <div class="modal-body">
  			<%= render :partial => 'stocks/graph', :locals => { :stock => @s } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
		<span id="<%= w.id %>">

		<div class="btn-group">
 		<button class="btn btn-outline btn-md dropdown-toggle 
 		<% case w.attitude %>
 		<% when -1 %>
 		btn-danger
 		<% when 0 %>
 		btn-warning
 		<% when 1 %>
 		btn-success
 		<% end %>
 		" type="button" data-toggle="dropdown" aria-expanded="false">
    	<% case w.attitude %>
		<% when -1 %>
		DOWN
		<% when 0 %>
		NEUTRAL
		<% when 1 %>
		UP
		<% end %>
    	<span class="caret"></span>
 		</button>
  		<ul class="dropdown-menu" role="menu">
  			<% case w.attitude %>
  			<% when -1 %>
  			<li><%= link_to "UP", controller: "stocks", action: "up", id: w %></li>
  			<li><%= link_to "NEUTRAL", controller: "stocks", action: "neutral", id: w %></li>
  			<% when 0 %>
  			<li><%= link_to "UP", controller: "stocks", action: "up", id: w %></li>
  			<li><%= link_to "DOWN", controller: "stocks", action: "down", id: w %></li>
  			<% when 1 %>
  			<li><%= link_to "DOWN", controller: "stocks", action: "down", id: w %></li>
  			<li><%= link_to "NEUTRAL", controller: "stocks", action: "neutral", id: w %></li>
  			<% end %>
  		</ul>
		</div>


		</span>
		</h6>

		<% end %>

		</div>
	</div>

</div>
<% end %>
<div id="postbox">
	<%= render 'posts/form' %>
</div>
<div id="main">
	<h5>Most recent prophesees</h5>
	<% @posts.each do |p| %>
	<p><%= p.content %>, <%= p.post_created %></p>
	<% end %>
</div>

<div id="stockbox">
	<%= render 'stocks/index' %>
	<%= render 'stocks/watch' %>
</div>

